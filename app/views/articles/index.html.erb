        <%= user.name %>
        <%= user.user_id %>
        <%= button_to "削除する", twitter_user_path(user), method: :delete, data: {confirm:"本当によろしいですか？"} %>
        <br>
      <% end %>

    </div>
    <%= link_to 'ログイン', login_path, class: 'btn btn-link px-3 me-2' %>
