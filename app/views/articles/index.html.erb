    <div class="col-xl-5 col-md-8 bg-info">
      
      <%= form_with model: @twitter_user, url: twitter_users_path, local: true do |f| %>
        <%= f.text_field :username, placeholder: 'TwitterIDを入力（例：yoiyoicho）' %>
        <%= f.submit 'このuserを保存する' %>
      <% end %>

      <br><br>

      <% @twitter_users.each do |user| %>
